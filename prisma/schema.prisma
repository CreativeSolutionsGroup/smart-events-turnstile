generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id        String  @id @default(uuid())
  name      String
  year      Year?
  email     String?
  redwoodId String?
  prox      String?

  registrations Registeration[]
}

model Event {
  id            String          @id @default(uuid())
  name          String
  registrations Registeration[]
}

model Checkin {
  id             String        @id @default(uuid())
  createdAt      DateTime      @default(now())
  registrationId String        @unique
  registration   Registeration @relation(fields: [registrationId], references: [id])
}

model Registeration {
  id        String   @id @default(uuid())
  studentId String
  student   Student  @relation(fields: [studentId], references: [id])
  eventId   String
  event     Event    @relation(fields: [eventId], references: [id])
  checkin   Checkin?
}

model Admin {
  id    String @id @default(uuid())
  email String
}

enum Year {
  FRESHMAN
  SOPHOMORE
  JUNIOR
  SENIOR
}
