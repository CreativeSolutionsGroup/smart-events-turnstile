generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id           String         @id @default(uuid())
  name         String
  year         Year?
  email        String?
  redwoodId    String?
  prox         String?
  Registration Registration[]
}

model Event {
  id           String         @id @default(uuid())
  name         String
  Registration Registration[]
}

model Checkin {
  id             String       @id @default(uuid())
  createdAt      DateTime     @default(now())
  registrationId String       @unique
  Registeration  Registration @relation(fields: [registrationId], references: [id])
}

model Admin {
  id    String @id @default(uuid())
  email String
}

model Registration {
  id        String   @id @default(uuid())
  studentId String
  eventId   String
  Checkin   Checkin?
  Event     Event    @relation(fields: [eventId], references: [id])
  Student   Student  @relation(fields: [studentId], references: [id])
}

enum Year {
  FRESHMAN
  SOPHOMORE
  JUNIOR
  SENIOR
}
